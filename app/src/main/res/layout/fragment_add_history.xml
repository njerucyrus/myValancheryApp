<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_majery.AddHistoryFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
            android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
            android:text="Upload Photo"
            android:drawablePadding="8dp"
            android:fontFamily="@font/century_gothic"
            android:id="@+id/btn_history_upload_place_photo"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/img_history"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:layout_width="260dp"
            android:layout_height="180dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Place Name"
                android:id="@+id/txt_history_place_name"
                android:fontFamily="@font/century_gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Description"
                android:id="@+id/txt_history_place_desc"
                android:inputType="textMultiLine"

                android:fontFamily="@font/century_gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_submit_history"
            android:background="@drawable/button_ui_primary"
            android:textColor="@color/colorWhite"
            android:text="Submit"
            android:layout_width="140dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />


    </LinearLayout>

</FrameLayout>