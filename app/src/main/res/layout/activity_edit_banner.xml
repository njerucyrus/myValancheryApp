<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditBannerActivity">
    <ImageView
        android:id="@+id/img_edit_banner"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:foregroundGravity="center"
        android:layout_margin="8dp"
        android:src="@drawable/no_barner"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_edit_change_banner"
            android:layout_margin="8dp"
            android:text="Change Image"
            android:textColor="@color/colorWhite"
            android:padding="8dp"
            android:background="@drawable/button_ui_primary"
            android:layout_width="120dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btn_edit_delete_banner"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/ic_delete_white_24dp"
            android:text="DELETE"
            android:textColor="@color/colorWhite"
            android:padding="8dp"
            android:background="@drawable/button_ui_danger"
            android:layout_width="120dp"
            android:layout_height="48dp" />

    </LinearLayout>


</LinearLayout>