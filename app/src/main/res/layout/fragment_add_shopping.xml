<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddShoppingFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/century_gothic"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Add Shop Here"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Type Shop Name Here"
                android:fontFamily="@font/century_gothic"
                android:id="@+id/txt_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Type Shop Contact No"
                android:fontFamily="@font/century_gothic"
                android:id="@+id/txt_shop_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_margin="8dp"
            android:drawableStart="@drawable/location_48"
            android:drawableLeft="@drawable/location_48"
            android:id="@+id/btn_select_shop_location"
            android:textStyle="bold"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:text="Select Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_selected_shop_location"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatSpinner
            android:layout_margin="8dp"
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/shop_type_spinner"
            android:entries="@array/shop_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.AppCompatSpinner>

        <Button
            android:id="@+id/btn_add_shop"
            android:text="Submit"
            android:fontFamily="@font/century_gothic"
            android:background="@drawable/button_ui_primary"
            android:textColor="@color/colorWhite"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>

</FrameLayout>