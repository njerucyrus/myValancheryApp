<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddNewsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_add_news_photo"
                android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
                android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
                android:text="Upload Photo"
                android:drawablePadding="8dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:fontFamily="@font/century_gothic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_news"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_width="260dp"
                android:layout_height="180dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_news_heading"
                    android:hint="News Heading"
                    android:fontFamily="@font/century_gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_news"
                    android:hint="News"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/century_gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_submit_news"
                android:layout_margin="16dp"
                android:background="@drawable/button_ui_primary"
                android:text="Submit News"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/century_gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>