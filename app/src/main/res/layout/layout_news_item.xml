<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginTop="1dp"
    android:background="@color/colorWhite"
    >


    <ImageView
        android:id="@+id/img_news_icon"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_margin="1dp" />

    <TextView
        android:id="@+id/tv_news_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/img_news_icon"
        android:layout_toEndOf="@+id/img_news_icon"
        android:fontFamily="@font/century_gothic"
        android:text="News Headlines"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/tv_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_headline"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/img_news_icon"
        android:fontFamily="@font/century_gothic"
        android:text="News Headlines"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/colorPrimaryText"
        android:visibility="gone" />


</RelativeLayout>