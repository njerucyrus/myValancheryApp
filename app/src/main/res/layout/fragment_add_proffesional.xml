<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.AddProfessionalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
                android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
                android:text="Upload Photo"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/btn_upload_professional_photo"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_professional_photo"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                android:layout_width="260dp"
                android:layout_height="180dp" />
            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:hint=" Name"
                    android:id="@+id/txt_professional_name"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:hint="Phone Number"
                    android:id="@+id/txt_professional_phone_number"
                    android:inputType="textMultiLine"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:hint="Place"
                    android:id="@+id/txt_professional_place"
                    android:inputType="textMultiLine"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:id="@+id/spinner_professional_type"
                android:entries="@array/professional_category"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/btn_submit_professional"
                android:background="@drawable/button_ui_primary"
                android:textColor="@color/colorWhite"
                android:text="Submit"
                android:layout_width="140dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>