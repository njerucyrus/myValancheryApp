<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".majery_activities.ShopDetailActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorBg" />

    <LinearLayout
        android:id="@+id/slider_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="172dp"
        android:background="@color/colorWhite"
        android:gravity="end"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider_dots"
        android:background="@color/colorLightGrey"
        android:fontFamily="@font/century_gothic"
        android:gravity="start"
        android:padding="8dp"
        android:text="Shop Name"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:orientation="horizontal">

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/century_gothic"
            android:text="6th Streat, Majeri" />


    </LinearLayout>

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_rating" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/ic_phone_black_48dp"
                android:drawableStart="@drawable/ic_phone_black_48dp"
                android:fontFamily="@font/century_gothic"
                android:text="Make a Call"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>