<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.AboutFragment">


<ScrollView
    android:background="@color/colorBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardElevation="2dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:id="@+id/about_banner_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardElevation="2dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAlignment="center"
                            android:text="Mobile"
                            android:fontFamily="@font/century_gothic"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="127282828256"
                            android:textColor="@color/colorPrimaryText"
                            android:fontFamily="@font/century_gothic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAlignment="center"
                            android:text="Mobile"
                            android:fontFamily="@font/century_gothic"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="127282828256"
                            android:textColor="@color/colorPrimaryText"
                            android:fontFamily="@font/century_gothic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                </LinearLayout>

                <View
                    android:background="@color/colorDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"/>

                <LinearLayout
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAlignment="center"
                            android:text="Email"
                            android:fontFamily="@font/century_gothic"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="email@test.com"
                            android:textColor="@color/colorPrimaryText"
                            android:fontFamily="@font/century_gothic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAlignment="center"
                            android:text="Website"
                            android:fontFamily="@font/century_gothic"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="www.testdomain.com"
                            android:textColor="@color/colorPrimaryText"
                            android:fontFamily="@font/century_gothic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardElevation="2dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="8dp"
                    android:textColor="@color/colorSecondaryText"
                    android:text="Address"
                    android:fontFamily="@font/century_gothic"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="8dp"
                    android:text="Mumbai India"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:fontFamily="@font/century_gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="bottom"
            app:cardElevation="2dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_phone_black_48dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_phone_black_48dp"
                    android:fontFamily="@font/century_gothic"
                    android:gravity="center"
                    android:text="Make A Call"
                    android:textColor="@color/colorPrimaryText" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>


</FrameLayout>