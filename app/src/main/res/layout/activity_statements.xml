<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".digital_activities.StatementsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_sb_account_profile"
            android:layout_margin="8dp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/user_96"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_sb_account_balance"
            android:layout_toRightOf="@+id/img_sb_account_profile"
            android:layout_toEndOf="@+id/img_sb_account_profile"
            android:text="Acc Balance: INR 1200"
            android:textColor="@color/colorRed"
            android:fontFamily="sans-serif-condensed"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sb_account_profile_holdername"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Holder Name:"
            android:layout_toRightOf="@+id/img_sb_account_profile"
            android:layout_toEndOf="@+id/img_sb_account_profile"
            android:layout_below="@+id/tv_sb_account_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sb_profile_account_no"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Account No:"
            android:layout_toRightOf="@+id/img_sb_account_profile"
            android:layout_toEndOf="@+id/img_sb_account_profile"
            android:layout_below="@+id/tv_sb_account_profile_holdername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sb_profile_batch_no"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Batch No:"
            android:layout_toRightOf="@+id/img_sb_account_profile"
            android:layout_toEndOf="@+id/img_sb_account_profile"
            android:layout_below="@+id/tv_sb_profile_account_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_below="@+id/img_sb_account_profile"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabLayout
                android:id="@+id/account_profile_tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TabItem
                    android:text="Deposits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TabItem
                    android:text="Withdraws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/profile_view_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>