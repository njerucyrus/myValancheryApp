<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/img_item"
            android:src="@drawable/no_icon_48"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:layout_width="72dp"
            android:layout_height="72dp" />
        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_toRightOf="@+id/img_item"
            android:layout_toEndOf="@+id/img_item"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Name"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/tv_name"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:layout_margin="2dp"
                android:text="Phone Number"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/tv_phone"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:layout_margin="2dp"
                android:text="Location"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/tv_location"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_share"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:drawableStart="@drawable/ic_share_black_48dp"
                android:drawableLeft="@drawable/ic_share_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="96dp" />
            <TextView
                android:id="@+id/tv_map"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:gravity="end"
                android:drawableStart="@drawable/ic_location_on_black_32dp"
                android:drawableLeft="@drawable/ic_location_on_black_32dp"
                android:layout_width="wrap_content"
                android:layout_height="96dp" />


            <TextView
                android:id="@+id/tv_call"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:gravity="end"
                android:drawableStart="@drawable/ic_phone_black_48dp"
                android:drawableLeft="@drawable/ic_phone_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="96dp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:gravity="end"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:id="@+id/layout_admin_control"
        android:layout_below="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_invalidate"
            android:gravity="center"
            android:background="@drawable/button_ui_primary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="In Validate"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/btn_validate"
            android:gravity="center"
            android:background="@drawable/button_ui_primary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Validate"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/btn_delete"
            android:gravity="center"
            android:background="@drawable/button_ui_danger"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Delete"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />


    </LinearLayout>
    <View
        android:layout_below="@+id/layout_admin_control"
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</RelativeLayout>