<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBloodDonorAdminActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_blood_group_admin"
            android:layout_margin="8dp"
            android:fontFamily="@font/century_gothic"
            android:entries="@array/blood_groups"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </android.support.v7.widget.AppCompatSpinner>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="FullName"
                android:fontFamily="@font/century_gothic"
                android:inputType="textPersonName"
                android:id="@+id/txt_fullname_admin"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_phone_number_admin"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="8dp"
                android:inputType="phone"
                android:hint="Phone Number"
                android:fontFamily="@font/century_gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_address"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/century_gothic"
                android:hint="Physical address"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_other_details"
                android:inputType="textMultiLine"
                android:drawableStart="@drawable/ic_info_outline_black_24dp"
                android:drawableLeft="@drawable/ic_info_outline_black_24dp"
                android:drawablePadding="8dp"
                android:hint="Other Details"
                android:fontFamily="@font/century_gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_upload_avator"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:layout_width="72dp"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="8dp"
                android:fontFamily="@font/century_gothic"
                android:layout_margin="8dp"
                android:id="@+id/tv_uploaded_profile_img_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <Button
            android:id="@+id/btn_done_admin"
            android:layout_margin="16dp"
            android:background="@drawable/button_ui_primary"
            android:text="Done"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>


</android.support.constraint.ConstraintLayout>