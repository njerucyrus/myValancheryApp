<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:id="@+id/cardContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_blood_donor"
            android:background="@color/colorBg"
            android:layout_margin="8dp"
            android:layout_width="74dp"
            android:layout_height="64dp" />
        <TextView
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryText"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/fullname_n_phone_number_nlocation"
            android:id="@+id/txt_donor_desc"
            android:layout_toEndOf="@+id/image_blood_donor"
            android:layout_toRightOf="@+id/image_blood_donor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/btn_share"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_toEndOf="@+id/txt_donor_desc"
            android:layout_toRightOf="@+id/txt_donor_desc"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <ImageButton
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/btn_call"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_toEndOf="@+id/btn_share"
            android:layout_toRightOf="@+id/btn_share"
            android:layout_width="64dp"
            android:layout_height="64dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/cardContent"
        android:visibility="gone"
        android:gravity="end"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:id="@+id/layout_admin_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_invalidate"
            android:gravity="center"
            android:background="@drawable/button_ui_primary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="In Validate"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/btn_validate"
            android:gravity="center"
            android:background="@drawable/button_ui_primary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Validate"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/btn_delete"
            android:gravity="center"
            android:background="@drawable/button_ui_danger"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Delete"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />


    </LinearLayout>
</RelativeLayout>