<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context=".majery_activities.BloodBankActivity"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/century_gothic"
                        android:text="&quot;Blood Donation will Cost you Nothing\nBut Will Save A Life&quot; "
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/century_gothic"
                        android:text="Choose any Blood Group"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_a_plus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/aplus" />

                        <ImageView
                            android:id="@+id/img_b_plus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bplus" />

                        <ImageView
                            android:id="@+id/img_o_plus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/oplus" />

                        <ImageView
                            android:id="@+id/img_ab_plus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/abplus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_a_minus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/aminus" />

                        <ImageView
                            android:id="@+id/img_b_minus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bminus" />

                        <ImageView
                            android:id="@+id/img_o_minus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ominus" />

                        <ImageView
                            android:id="@+id/img_ab_minus"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_margin="8dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/abminus" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_become_donor"
                        android:layout_width="128dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:adjustViewBounds="true"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/donate_blood" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/century_gothic"
                        android:text="Become Donor"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>