<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_partner_photo"
                android:layout_margin="8dp"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/user_96"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_partner_name"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:fontFamily="@font/century_gothic"
                android:text="Name:"
                android:layout_toRightOf="@+id/img_partner_photo"
                android:layout_toEndOf="@+id/img_partner_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_partner_place"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:fontFamily="@font/century_gothic"
                android:text="Place"
                android:layout_toRightOf="@+id/img_partner_photo"
                android:layout_toEndOf="@+id/img_partner_photo"
                android:layout_below="@+id/tv_partner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_partner_age"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:fontFamily="@font/century_gothic"
                android:text="Age"
                android:layout_toRightOf="@+id/img_partner_photo"
                android:layout_toEndOf="@+id/img_partner_photo"
                android:layout_below="@+id/tv_partner_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_partner_phonenumber"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:fontFamily="@font/century_gothic"
                android:text="Phone Number"
                android:layout_toRightOf="@+id/img_partner_photo"
                android:layout_toEndOf="@+id/img_partner_photo"
                android:layout_below="@+id/tv_partner_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>