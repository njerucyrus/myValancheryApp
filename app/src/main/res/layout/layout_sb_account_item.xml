<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_account_photo"
                android:layout_margin="8dp"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/user_96"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_sb_account_holder_name"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed"
                android:text="Holder Name:"
                android:layout_toRightOf="@+id/img_account_photo"
                android:layout_toEndOf="@+id/img_account_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_holder_account_no"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed"
                android:text="Account No:"
                android:layout_toRightOf="@+id/img_account_photo"
                android:layout_toEndOf="@+id/img_account_photo"
                android:layout_below="@+id/tv_sb_account_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_holder_batch_no"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed"
                android:text="Batch No:"
                android:layout_toRightOf="@+id/img_account_photo"
                android:layout_toEndOf="@+id/img_account_photo"
                android:layout_below="@+id/tv_holder_account_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <Button
                android:id="@+id/btn_delete_sb_account"
                android:layout_margin="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/button_ui_danger"
                android:text="Delete Account"
                android:padding="8dp"
                android:layout_below="@+id/tv_holder_batch_no"
                android:layout_toRightOf="@+id/img_account_photo"
                android:layout_toEndOf="@+id/img_account_photo"
                android:layout_width="wrap_content"
                android:layout_height="42dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>