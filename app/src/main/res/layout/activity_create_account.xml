<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".digital_activities.CreateAccountActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimaryText"
            android:layout_margin="8dp"
            android:fontFamily="@font/century_gothic"
            android:textSize="16sp"
            android:text="Create New Account"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

        <Button
            android:id="@+id/btn_select_sb_photo"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
            android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
            android:text="Upload Photo"
            android:fontFamily="@font/century_gothic"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/img_selected_sb_photo"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Batch No"
                android:id="@+id/txt_sb_batch_no"
                android:fontFamily="@font/century_gothic"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Customer Name"
                android:id="@+id/txt_sb_customer_name"
                android:fontFamily="@font/century_gothic"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Account No"
                android:id="@+id/txt_sb_account_no"
                android:fontFamily="@font/century_gothic"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Email Address"
                android:id="@+id/txt_sb_email"
                android:fontFamily="@font/century_gothic"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Password"
                android:id="@+id/txt_sb_password"
                android:fontFamily="@font/century_gothic"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="Confirm Password"
                android:id="@+id/txt_sb_confirm_password"
                android:fontFamily="@font/century_gothic"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_margin="16dp"
            android:background="@drawable/button_ui_primary"
            android:text="Create Account"
            android:id="@+id/btn_create_sb_account"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>

</android.support.constraint.ConstraintLayout>