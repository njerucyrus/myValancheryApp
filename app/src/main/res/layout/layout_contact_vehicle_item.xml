<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_contact_vehicle_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/img_contact_vehicle"
            android:src="@drawable/no_icon_48"
            android:scaleType="centerCrop"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_toRightOf="@+id/img_contact_vehicle"
            android:layout_toEndOf="@+id/img_contact_vehicle"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Name"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/tv_contact_vehicle_name"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_margin="2dp"
                android:text="Phone Number"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/tv_contact_vehicle_phone"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_margin="2dp"
                android:text="Location"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/tv_contact_vehicle_location"
                android:fontFamily="@font/century_gothic"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_toRightOf="@+id/layout_text"
            android:layout_toEndOf="@+id/layout_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_contact_vehicle_share"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:drawableStart="@drawable/ic_share_black_48dp"
                android:drawableLeft="@drawable/ic_share_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="96dp" />
            <TextView
                android:id="@+id/tv_contact_vehicle_call"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="end"
                android:drawableStart="@drawable/ic_phone_black_48dp"
                android:drawableLeft="@drawable/ic_phone_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="96dp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:visibility="visible"
        android:gravity="end"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:id="@+id/layout_contact_vehicle_admin_control"
        android:layout_below="@+id/layout_contact_vehicle_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_contact_vehicle_validate"
            android:gravity="center"
            android:background="@drawable/button_ui_primary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Validate"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />
    </LinearLayout>
    <View
        android:layout_below="@+id/layout_contact_vehicle_admin_control"
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</RelativeLayout>